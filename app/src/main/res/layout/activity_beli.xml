<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beli">

    <ImageView
        android:id="@+id/iv_brand"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_logo" />

    <EditText
        android:id="@+id/ed_nama_pembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_brand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Masukan Nama Pembeli"
        android:inputType="text"
        android:textColorHint="@color/colortextorange"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_jumlah_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_nama_pembeli"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Masukan Jumlah Produk"
        android:inputType="number"
        android:textColorHint="@color/colortextorange"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ed_status_pembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_jumlah_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Masukan Status Pembelian"
        android:inputType="text"
        android:textColorHint="@color/colortextorange"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:id="@+id/bt_simpan_beli"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/colortextorange"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:layout_below="@+id/ed_status_pembeli"/>

</RelativeLayout>