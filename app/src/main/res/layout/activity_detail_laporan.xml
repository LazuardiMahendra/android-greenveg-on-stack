<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_detail_produk"
    android:orientation="vertical"
    tools:context=".controller.Laporan.detail_laporan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dl_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_logo"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="40dp"/>

        <EditText
            android:id="@+id/lp_shop_info"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Shop Information"
            android:letterSpacing="0.1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colortextorange"
            android:textColorHint="@color/colortextorange"
            android:textSize="19dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tbl_laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="100dp"
        android:weightSum="100">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="10dp"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="190dp"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:text="Colom"
                android:textColor="@color/colorWhite" />
        </TableRow>

        /// colom 1

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="10dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colortextorange" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="190dp"
                android:gravity="center"
                android:text="Cell Content 1"
                android:textColor="@color/colortextorange" />
        </TableRow>

        /// colom 2

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="10dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colortextorange" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="190dp"
                android:gravity="center"
                android:text="Cell Content 2"
                android:textColor="@color/colortextorange" />
        </TableRow>

        ///colom 3

        <TableRow>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="10dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colortextorange" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="190dp"
                android:gravity="center"
                android:text="Cell Content 3"
                android:textColor="@color/colortextorange" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/lp_note_info"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:hint="Note Information"
        android:textColor="@color/colortextorange"
        android:textColorHint="@color/colortextorange"/>





</RelativeLayout>

