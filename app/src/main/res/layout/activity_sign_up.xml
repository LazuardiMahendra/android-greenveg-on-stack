<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SignUpActivity">

    <ImageView
        android:id="@+id/bt_back_signup"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:onClick="panggilbacksignup"
        android:layout_marginRight="40dp"
        android:src="@drawable/l_arrow" />

    <ImageView
        android:id="@+id/iv_brand_signup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:contentDescription="com.example.helloworldv4"
        app:srcCompat="@drawable/img_logo" />


    <!--        //NPWP//-->

    <TextView
        android:id="@+id/title_npwp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_brand_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:letterSpacing="0.1"
        android:text="NPWP"
        android:textColor="@color/colortextorange"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_npwp_signup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_npwp_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Masukan NPWP"
        android:letterSpacing="0.1"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp" />

    <!--        //EMAIL//-->

    <TextView
        android:id="@+id/title_email_signup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_npwp_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:letterSpacing="0.1"
        android:text="Email"
        android:textColor="@color/colortextorange"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_email_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_email_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Masukan Email"
        android:letterSpacing="0.1"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp" />

    <!--        //Password-->

    <TextView
        android:id="@+id/title_password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:letterSpacing="0.1"
        android:text="Password"
        android:textColor="@color/colortextorange"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_password_signup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_password_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Masukan Password"
        android:letterSpacing="0.1"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp" />

    <!--        //Alamat-->

    <TextView
        android:id="@+id/title_alamat_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:letterSpacing="0.1"
        android:text="Alamat"
        android:textColor="@color/colortextorange"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_alamat_signup"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_below="@id/title_alamat_signup"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Masukan Alamat"
        android:letterSpacing="0.1"
        android:textColor="@color/colorGrey"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp" />


    <Button
        android:id="@+id/bt_sign_up_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_alamat_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sign Up" />


</RelativeLayout>







