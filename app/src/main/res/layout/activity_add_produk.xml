    <EditText
        android:id="@+id/et_addNama_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_brand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:drawableLeft="@drawable/ic_produk"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Masukan Nama Produk"
        android:inputType="textPersonName"

        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colortextorange"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/et_addHarga_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_addNama_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_harga"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Masukan Harga Produk"
        android:inputType="numberDecimal"

        android:letterSpacing="0.1"


        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colortextorange"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/et_addStok_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_addHarga_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_stok"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Masukan Stok Produk"
        android:inputType="numberDecimal"

        android:letterSpacing="0.1"


        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colortextorange"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp"

        />

    <EditText
        android:id="@+id/et_addKategori_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_addStok_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_stok"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Masukan Kategori Produk"
        android:inputType="numberSigned"
        android:letterSpacing="0.1"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colortextorange"
        android:textColorHint="@color/colortextorange"
        android:textSize="15dp"

        />

    <ImageView
        android:id="@+id/iv_addPhoto_produk"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@id/et_addKategori_produk"
        android:layout_marginLeft="50dp"

        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:letterSpacing="0.1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/bt_addPhoto_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_addKategori_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@color/colorWhite"
        android:onClick="panggilgambar"
        android:text="Choose Photo" />

    <Button
        android:id="@+id/bt_simpan_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_addKategori_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:background="@color/colorWhite"
        android:contentDescription="App Description"

        android:letterSpacing="0.2"
        android:text="Simpan"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_batal_produk"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/bt_simpan_produk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"

        android:letterSpacing="0.2"
        android:onClick="reset"
        android:text="Batal"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

